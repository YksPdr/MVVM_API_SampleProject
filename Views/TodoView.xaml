<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns = "http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x = "http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class = "MVVM_API_SampleProject.Views.TodoView"
             Title = "TodoView">
    <VerticalStackLayout Padding="50">

        
        <Label 
            Text = "TAREFAS A SEREM REALIZADAS"
            VerticalOptions = "Center" 
            HorizontalOptions = "Center" />

        <Label 
            Padding="10"
            Text="{Binding Todo.UserId}"
            VerticalOptions = "Center" 
            HorizontalOptions = "Center" />

        <Label 
            Padding="10"
            Text="{Binding Todo.Id}"
            VerticalOptions = "Center" 
            HorizontalOptions = "Center" />

        <Label 
            Padding="10"
            Text="{Binding  Todo.Title}"
            VerticalOptions = "Center" 
            HorizontalOptions = "Center" />

        <HorizontalStackLayout VerticalOptions = "Center" HorizontalOptions = "CenterAndExpand">
            <CheckBox x:Name="Box"
                IsChecked = "{Binding Todo.Completed , Mode=TwoWay}" />

            <Label 
                Text = "{Binding Todo.Completed}"
                VerticalOptions = "Center" 
                HorizontalOptions = "Center" />
        </HorizontalStackLayout>

    </VerticalStackLayout>
</ContentPage>
    
    